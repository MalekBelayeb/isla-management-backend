{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Backend",
      "type": "shell",
      "command": "pnpm start:dev",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "hide": true,
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1,
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Nest application successfully started",
          "endsPattern": "Nest application successfully started"
        }
      }
    },
    {
      "label": "Run Frontend",
      "type": "shell",
      "command": "cd .. && cd isla-management-system && npx kill-port 4300 && pnpm dev",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "hide": true,
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1,
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Server listening at http://*:8080",
          "endsPattern": "Server listening at http://.*:8080"
        }
      }
    },
    {
      "label": "Run App",
      "type": "shell",
      "command": "cd apps/front && pnpm dev && bash",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "isBackground": true,
      "dependsOrder": "sequence",
      "dependsOn": ["Run Backend", "Run Frontend"]
    }
  ]
}
